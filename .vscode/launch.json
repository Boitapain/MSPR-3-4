{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Flask API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/api/api.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/.venv/bin/python:${workspaceFolder}/app:${workspaceFolder}/app/api"
            },
            "justMyCode": false
        },
        {
            "name": "Python: Streamlit",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/streamlit",
            "args": [
                "run",
                "${workspaceFolder}/app/frontend/app.py"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/.venv/bin/python:${workspaceFolder}/app"
            },
            "justMyCode": true
        }
    ]
}